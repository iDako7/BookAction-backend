generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ====== Database for Learning ======

// === 1. model related to module directly === 
// In each module, we have one theme, 1-n concepts, 1-n reflections.
model Module {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  order_index Int      // to allow us arrange order
  created_at  DateTime @default(now()) // DateTime + now() stores a Postgres timestamp automatically

  // define relations with other data sets
  theme       Theme?
  concepts    Concept[]
  reflections Reflection[]
}

model Theme {
  id         Int      @id @default(autoincrement())

  // relationship with Module
  module     Module   @relation(fields:[module_id], references: [id])
  module_id  Int      @unique // unique mean unique to model Module, it's a 1:1 relationship

  // actual data
  title      String
  context    String   @db.Text
  media_url  String   @db.Text
  media_type String
  question   String   @db.Text
  created_at DateTime @default(now())
}

model Concept {
  id          Int     @id @default(autoincrement())

  // relationship with Module
  module      Module @relation(fields:[module_id], references: [id], onDelete: Restrict)
  module_id   Int

  // relationship with sub-module
  // 1 concept has 1 tutorial, 1 summary, n quizzes, n user progress
  tutorial Tutorial?
  summary Summary?
  quizzes Quiz[]
  User_concept_progress User_concept_progress[]

  // actual data
  order_index Int
  title String
  definition String @db.Text
  why_it_works String @db.Text
  created_at  DateTime @default(now())

  @@index([module_id])
}

model Reflection {
  id Int @id @default(autoincrement())

  // relationship with Module
  user User @relation(fields: [user_id], references: [id])
  module     Module   @relation(fields:[module_id], references: [id])
  module_id  Int      

  // actual data
  order_index Int
  user_id     Int
  module_summary String @db.Text
  module_summary_media_url String @db.Text
  learning_advice String @db.Text
  created_at  DateTime @default(now())
  
  // Add relation to User_response
  user_responses User_response[]
}

// === 2. concept related to concept directly === 

model Tutorial {
  id Int @id @default(autoincrement())
  concept Concept @relation(fields:[concept_id], references: [id])
  concept_id Int @unique
  order_index Int
  good_story String @db.Text
  good_media_url String @db.Text
  bad_story String @db.Text
  bad_media_url String @db.Text
  created_at  DateTime @default(now())
}

model Quiz {
  id Int @id @default(autoincrement())
  concept Concept @relation(fields:[concept_id], references: [id])
  concept_id Int

  order_index Int
  question String @db.Text
  question_type String
  media_url String @db.Text
  options Json @db.JsonB
  correct_option_index Int[]
  explanation String @db.Text
  created_at  DateTime @default(now())
  
  // Add relation to User_response
  user_responses User_response[]
}

model Summary {
  id Int @id @default(autoincrement())
  concept Concept @relation(fields:[concept_id], references: [id])
  concept_id Int @unique

  order_index Int
  summary_content String @db.Text
  next_chapter_intro String @db.Text
  created_at  DateTime @default(now())
}

// ============ user data ==========
// user's info
model User {
  // @id set the id as the default index, @default set the default value
  id Int @id @default(autoincrement())
  email String @unique
  username String
  password_hash String

  role String @default("student") // student, teacher, admin
  is_active Boolean @default(true)
  last_login DateTime? 
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt // Automatically updates timestamp on any record change

  // relations: each user has multiple tokens, concept progress records, responses, and module reflections
  concept_progress User_concept_progress[]
  response User_response[]
  refresh_tokens RefreshToken[]
  module_reflections Reflection[]

  // @@index set the additional index for faster lookups, otherwise we need to scan the whole DB to look for it
  @@index([email])
  @@index([username])
}

// For refresh tokens
model RefreshToken {
  id Int @id @default(autoincrement())
  token String @unique
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id Int 
  expires_at DateTime
  created_at DateTime @default(now())

  @@index([token])
  @@index([user_id])
}

// user's progress in concept
model User_concept_progress {
  id Int @id @default(autoincrement()) 
  // relationship with concept
  concept Concept @relation(fields:[concept_id], references: [id], onDelete: Cascade)
  concept_id Int
  
  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id Int 
  completed Boolean
  time_spent Int
  completed_at DateTime?
  created_at  DateTime @default(now())
  
  @@unique([concept_id, user_id])
  @@index([user_id])
}

// user response related to quiz, reflection
model User_response {
  id Int @id @default(autoincrement())

  // relationship with other model - make these optional
  user User @relation(fields: [user_id], references: [id])
  quiz Quiz? @relation(fields:[quiz_id], references: [id])
  quiz_id Int?

  reflection Reflection? @relation(fields:[reflection_id], references: [id])
  reflection_id Int?

  // actual data
  user_id Int
  created_at  DateTime @default(now())
  response_type String // e.g., "quiz" or "reflection"
  text_answer String? @db.Text // currently, store reflection response
  answer Json? @db.JsonB // currently, store answer of quiz
  is_correct Boolean?
  time_spent Int?

  // Multiple submissions allowed - track complete history
  @@index([quiz_id, user_id])
  @@index([reflection_id, user_id])
}
