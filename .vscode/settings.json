{
  // Use Prettier as the default formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Format files on save
  "editor.formatOnSave": true,

  // Optional: turn on format on paste and type (can be noisy; tweak if you don't like it)
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,

  // Enable format on save specifically for TypeScript and JavaScript
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // Git/Source Control settings
  // Show count badge on source control icon (like VS Code)
  "scm.countBadge": "all",
  // Enable git decorations
  "git.decorations.enabled": true,
  // Show diff decorations in the editor
  "scm.diffDecorations": "all"
}
